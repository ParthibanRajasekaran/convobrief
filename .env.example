# Core Configuration
DEVICE=cuda
LOG_LEVEL=INFO
ARTIFACTS_DIR=./artifacts
RANDOM_SEED=42

# Hugging Face Token (required for pyannote diarization)
# Get token from: https://huggingface.co/settings/tokens
# Accept licenses at: https://huggingface.co/pyannote/speaker-diarization-3.1
HF_TOKEN=your_hf_token_here

# Model Configuration
DIARIZATION_BACKEND=pyannote
ASR_MODEL_NAME=openai/whisper-large-v3
ASR_BEAM_SIZE=5
ASR_TEMPERATURES=[0.0,0.2,0.4]

EMOTION_MODEL_NAME=audeering/wav2vec2-large-robust-24-ft-emotion-msp-dim
SENTIMENT_MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
SARCASM_MODEL_NAME=cardiffnlp/twitter-roberta-base-irony
SUMMARIZER_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.3

# NLP Configuration
EMOTION_WINDOW_SEC=10.0
SARCASM_THRESHOLD=0.5
SARCASM_SENSITIVITY=balanced
FUSION_WEIGHTS=[0.4,0.3,0.3]

# Audio Processing
MIN_AUDIO_DURATION_SEC=10
MAX_AUDIO_DURATION_SEC=10800
TARGET_SAMPLE_RATE=16000

# VAD Configuration
VAD_THRESHOLD=0.5
MIN_SPEECH_DURATION_MS=250
MIN_SILENCE_DURATION_MS=100

# Diarization Configuration
MIN_SPEAKERS=2
MAX_SPEAKERS=5

# S3 Configuration (optional)
# S3_BUCKET=my-bucket
# S3_PREFIX=insights/
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
MAX_UPLOAD_SIZE_MB=500

# Security & PII
REDACT_PII=true
LOG_TRANSCRIPT_TEXT=false
HASH_AUDIO_URIS=true
